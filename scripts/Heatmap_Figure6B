
######################################################################################## Percentile Heatmap between Healthy, Uninflamed and Inflamed (figure 6B)

library(qs)


emr_new<-read.csv('EMR_New.csv')
mrCAF_new<-read.csv('mrCAF_New.csv')

setwd('/media/carlo/FFF9-F0A1/NatureCancer_2024/Fibroblasts/')

fibro_gse<-mrCAF_new%>%filter(Dataset%in%c('C.Smillie','G.Li','GSE125527'))

fibro_gse<-mrCAF_new

fibro_gse <- fibro_gse %>%
  mutate(Patient_Class = paste(Class, Patient, sep = "_"))

fibro_gse<-fibro_gse%>%filter(Class%in%c('Healthy','Uninflamed','Inflamed'))
rm(mrCAF_new)


emr_malign<-emr_new
emr_malign <- emr_malign %>%
  mutate(Patient_Class = paste(Class, Patient, sep = "_"))
emr_malign<-emr_new%>%filter(Dataset%in%c('C.Smillie','G.Li','GSE125527'))
emr_malign<-emr_malign%>%filter(Class%in%c('Healthy','Uninflamed','Inflamed'))
rm(emr_new)

setwd('/media/carlo/FFF9-F0A1/NatureCancer_2024/Fibroblasts/')
fibro_mtx<-qread('SparseMatrix_fibro.qs')

setwd('/media/carlo/FFF9-F0A1/NatureCancer_2024/')
epi_mtx <- qread('AllMalign_sparse.qs')

epi_mtx <- epi_mtx[,emr_malign$X.1]

HealthyInflamedUninflamed_mtx <- fibro_mtx[fibro_gse$X.1,]


HealthyInflamedUninflamed <- CreateSeuratObject(counts = t(HealthyInflamedUninflamed_mtx), meta.data = fibro_gse)
Idents(HealthyInflamedUninflamed) = 'Class'


scores <- HealthyInflamedUninflamed@meta.data$mrCAFMean

quantiles_seq <- seq(0.75, 0.95, by = 0.01)
quantiles_seq <- c(quantiles_seq, 0.99)
thresh_values <- quantile(scores, quantiles_seq)
print(thresh_values)

prop_list <- list()
fisher_list_Healthy <- list()
fisher_list_Uninflamed <- list()
# Create a list to store stats for Inflamed vs. NotInflamed (union of Healthy and Uninflamed) using chi-squared test
chi2_list_NotInflamed <- list()

# Loop over each threshold
for(i in seq_along(thresh_values)){
  threshold_value <- thresh_values[i]
  thresh_label <- paste0(round(quantiles_seq[i]*100), "%")
  
  # Add a binary metadata column: TRUE if the cell's score is above the threshold
  pos_colname <- paste0("mrCAF_pos_", thresh_label)
  HealthyInflamedUninflamed <- AddMetaData(
    HealthyInflamedUninflamed,
    metadata = scores > threshold_value,
    col.name = pos_colname
  )
  
  # Extract updated metadata
  meta <- HealthyInflamedUninflamed@meta.data
  
  # Build a contingency table for the three classes vs. positivity (TRUE/FALSE)
  tab <- table(meta$Class, meta[[pos_colname]])
  
  # Compute proportions for each class (fraction of cells with TRUE)
  prop_H <- tab["Healthy", "TRUE"] / sum(tab["Healthy", ])
  prop_I <- tab["Inflamed", "TRUE"] / sum(tab["Inflamed", ])
  prop_U <- tab["Uninflamed", "TRUE"] / sum(tab["Uninflamed", ])
  prop_list[[thresh_label]] <- c(Healthy = prop_H, Inflamed = prop_I, Uninflamed = prop_U)
  
  # For Fisher tests, compare Inflamed vs. Healthy:
  tab_H <- rbind(Inflamed = tab["Inflamed", ], Healthy = tab["Healthy", ])
  fisher_H <- fisher.test(tab_H)
  fisher_list_Healthy[[thresh_label]] <- list(p_value = fisher_H$p.value,
                                              odds_ratio = unname(fisher_H$estimate))
  
  # Compare Inflamed vs. Uninflamed:
  tab_U <- rbind(Inflamed = tab["Inflamed", ], Uninflamed = tab["Uninflamed", ])
  fisher_U <- fisher.test(tab_U)
  fisher_list_Uninflamed[[thresh_label]] <- list(p_value = fisher_U$p.value,
                                                 odds_ratio = unname(fisher_U$estimate))
  
  # Compare Inflamed vs. NotInflamed (union of Healthy and Uninflamed) using chi-squared test:
  notinflamed_counts <- colSums(tab[c("Healthy", "Uninflamed"), ])
  tab_NI <- rbind(Inflamed = tab["Inflamed", ], NotInflamed = notinflamed_counts)
  chi2_test <- chisq.test(tab_NI)
  
  # Calculate odds ratio manually
  # Extract counts: 
  # For Inflamed:
  inflamed_true <- tab_NI["Inflamed", "TRUE"]
  inflamed_false <- tab_NI["Inflamed", "FALSE"]
  # For NotInflamed:
  notinflamed_true <- tab_NI["NotInflamed", "TRUE"]
  notinflamed_false <- tab_NI["NotInflamed", "FALSE"]
  # Compute odds ratio if denominators are nonzero
  if(inflamed_false == 0 | notinflamed_false == 0){
    or_val <- NA
  } else {
    or_val <- (inflamed_true/inflamed_false) / (notinflamed_true/notinflamed_false)
  }
  
  chi2_list_NotInflamed[[thresh_label]] <- list(p_value = chi2_test$p.value,
                                                odds_ratio = or_val)
}

# Combine the proportions into a data frame for visualization.
heatmap_df <- do.call(rbind, prop_list)
heatmap_df <- as.data.frame(heatmap_df)
heatmap_df$Threshold <- rownames(heatmap_df)
df_tidy <- melt(heatmap_df, id.vars = "Threshold",
                variable.name = "Class", value.name = "Proportion")

# Set factor levels for desired ordering
df_tidy$Threshold <- factor(df_tidy$Threshold, levels = names(thresh_values))
df_tidy$Class <- factor(df_tidy$Class, levels = c("Healthy", "Uninflamed", "Inflamed"))

# Create data frames for the Fisher test statistics (Inflamed vs. Healthy and Inflamed vs. Uninflamed)
stats_df_Healthy <- data.frame(
  Threshold = names(fisher_list_Healthy),
  p_value = sapply(fisher_list_Healthy, function(x) x$p_value),
  odds_ratio = sapply(fisher_list_Healthy, function(x) x$odds_ratio),
  Group = "Healthy"
)
stats_df_Uninflamed <- data.frame(
  Threshold = names(fisher_list_Uninflamed),
  p_value = sapply(fisher_list_Uninflamed, function(x) x$p_value),
  odds_ratio = sapply(fisher_list_Uninflamed, function(x) x$odds_ratio),
  Group = "Uninflamed"
)
stats_df <- rbind(stats_df_Healthy, stats_df_Uninflamed)
stats_df$Threshold <- factor(stats_df$Threshold, levels = names(thresh_values))
stats_df$Group <- factor(stats_df$Group, levels = c("Healthy", "Uninflamed"))

# Create data frame for the chi-squared test (Inflamed vs. NotInflamed)
stats_df_NotInflamed <- data.frame(
  Threshold = names(chi2_list_NotInflamed),
  p_value = sapply(chi2_list_NotInflamed, function(x) x$p_value),
  odds_ratio = sapply(chi2_list_NotInflamed, function(x) x$odds_ratio),
  Group = "NotInflamed"
)
stats_df_NotInflamed$Threshold <- factor(stats_df_NotInflamed$Threshold, levels = names(thresh_values))

# You can then write out stats_df and stats_df_NotInflamed to a supplementary table.
# For example, you might combine them or write them separately:
stats_all <- rbind(stats_df, stats_df_NotInflamed)
write.csv(stats_all, "Supplementary_Stats.csv", row.names = FALSE)

# Create the heatmap using ggplot2
p <- ggplot(df_tidy, aes(x = Class, y = Threshold, fill = Proportion)) +
  geom_tile(color = "white") +
  # Using scale_fill_gradient2 to set a custom midpoint (0.75 here)
  scale_fill_gradient2(low = "white", high = "darkred", 
                       midpoint = 0.1, name = "Fraction of \nmrCAF+ cells") +
  theme_minimal() + 
  labs(x = NULL, y = "Thresholds", title = NULL, subtitle = NULL)+
  # Remove titles and axis labels for a cleaner look
  labs(x = NULL, y = NULL, title = NULL, subtitle = NULL) +
  theme(axis.ticks = element_blank(),
        axis.text = element_text(size = 12),
        panel.grid = element_blank())+
  theme(axis.text.x = element_text(angle = 45, hjust = 1))

# Save the plot to PDF
pdf('ggpubr_Inflamed_vs_Healthy_Uninflamed_5thQuantiles.pdf', width = 3.5, height = 10)
print(p)
dev.off()


Idents(epi_mtx) = 'Dataset'

epi_mtx <- subset(epi_mtx,idents = c('C.Smillie',
                                     'G.Li',
                                     'GSE125527'))

scores <- epi_mtx@meta.data$EMRMean

# Define the quantile thresholds (from 75% to 95% by 1% increments)
quantiles_seq <- seq(0.75, 0.95, by = 0.01)
thresh_values <- quantile(scores, quantiles_seq)
print(thresh_values)

# Create lists to store proportions and Fisher test statistics for both individual comparisons
prop_list <- list()
fisher_list_Healthy <- list()
fisher_list_Uninflamed <- list()
# Create a list to store stats for Inflamed vs. NotInflamed (union of Healthy and Uninflamed) using chi-squared test
chi2_list_NotInflamed <- list()

# Loop over each threshold
for(i in seq_along(thresh_values)){
  threshold_value <- thresh_values[i]
  thresh_label <- paste0(round(quantiles_seq[i]*100), "%")
  
  # Add a binary metadata column: TRUE if the cell's score is above the threshold
  pos_colname <- paste0("EMR_pos_", thresh_label)
  epi_mtx <- AddMetaData(
    epi_mtx,
    metadata = scores > threshold_value,
    col.name = pos_colname
  )
  
  # Extract updated metadata
  meta <- epi_mtx@meta.data
  
  # Build a contingency table for the three classes vs. positivity (TRUE/FALSE)
  tab <- table(meta$Class, meta[[pos_colname]])
  
  # Compute proportions for each class (fraction of cells with TRUE)
  prop_H <- tab["Healthy", "TRUE"] / sum(tab["Healthy", ])
  prop_I <- tab["Inflamed", "TRUE"] / sum(tab["Inflamed", ])
  prop_U <- tab["Uninflamed", "TRUE"] / sum(tab["Uninflamed", ])
  prop_list[[thresh_label]] <- c(Healthy = prop_H, Inflamed = prop_I, Uninflamed = prop_U)
  
  # For Fisher tests, compare Inflamed vs. Healthy:
  tab_H <- rbind(Inflamed = tab["Inflamed", ], Healthy = tab["Healthy", ])
  fisher_H <- fisher.test(tab_H)
  fisher_list_Healthy[[thresh_label]] <- list(p_value = fisher_H$p.value,
                                              odds_ratio = unname(fisher_H$estimate))
  
  # Compare Inflamed vs. Uninflamed:
  tab_U <- rbind(Inflamed = tab["Inflamed", ], Uninflamed = tab["Uninflamed", ])
  fisher_U <- fisher.test(tab_U)
  fisher_list_Uninflamed[[thresh_label]] <- list(p_value = fisher_U$p.value,
                                                 odds_ratio = unname(fisher_U$estimate))
  
  # Compare Inflamed vs. NotInflamed (union of Healthy and Uninflamed) using chi-squared test:
  notinflamed_counts <- colSums(tab[c("Healthy", "Uninflamed"), ])
  tab_NI <- rbind(Inflamed = tab["Inflamed", ], NotInflamed = notinflamed_counts)
  chi2_test <- chisq.test(tab_NI)
  
  # Calculate odds ratio manually
  # Extract counts: 
  # For Inflamed:
  inflamed_true <- tab_NI["Inflamed", "TRUE"]
  inflamed_false <- tab_NI["Inflamed", "FALSE"]
  # For NotInflamed:
  notinflamed_true <- tab_NI["NotInflamed", "TRUE"]
  notinflamed_false <- tab_NI["NotInflamed", "FALSE"]
  # Compute odds ratio if denominators are nonzero
  if(inflamed_false == 0 | notinflamed_false == 0){
    or_val <- NA
  } else {
    or_val <- (inflamed_true/inflamed_false) / (notinflamed_true/notinflamed_false)
  }
  
  chi2_list_NotInflamed[[thresh_label]] <- list(p_value = chi2_test$p.value,
                                                odds_ratio = or_val)
}

# Combine the proportions into a data frame for visualization.
heatmap_df <- do.call(rbind, prop_list)
heatmap_df <- as.data.frame(heatmap_df)
heatmap_df$Threshold <- rownames(heatmap_df)
df_tidy <- melt(heatmap_df, id.vars = "Threshold",
                variable.name = "Class", value.name = "Proportion")

# Set factor levels for desired ordering
df_tidy$Threshold <- factor(df_tidy$Threshold, levels = names(thresh_values))
df_tidy$Class <- factor(df_tidy$Class, levels = c("Healthy", "Uninflamed", "Inflamed"))

# Create data frames for the Fisher test statistics (Inflamed vs. Healthy and Inflamed vs. Uninflamed)
stats_df_Healthy <- data.frame(
  Threshold = names(fisher_list_Healthy),
  p_value = sapply(fisher_list_Healthy, function(x) x$p_value),
  odds_ratio = sapply(fisher_list_Healthy, function(x) x$odds_ratio),
  Group = "Healthy"
)
stats_df_Uninflamed <- data.frame(
  Threshold = names(fisher_list_Uninflamed),
  p_value = sapply(fisher_list_Uninflamed, function(x) x$p_value),
  odds_ratio = sapply(fisher_list_Uninflamed, function(x) x$odds_ratio),
  Group = "Uninflamed"
)
stats_df <- rbind(stats_df_Healthy, stats_df_Uninflamed)
stats_df$Threshold <- factor(stats_df$Threshold, levels = names(thresh_values))
stats_df$Group <- factor(stats_df$Group, levels = c("Healthy", "Uninflamed"))

# Create data frame for the chi-squared test (Inflamed vs. NotInflamed)
stats_df_NotInflamed <- data.frame(
  Threshold = names(chi2_list_NotInflamed),
  p_value = sapply(chi2_list_NotInflamed, function(x) x$p_value),
  odds_ratio = sapply(chi2_list_NotInflamed, function(x) x$odds_ratio),
  Group = "NotInflamed"
)
stats_df_NotInflamed$Threshold <- factor(stats_df_NotInflamed$Threshold, levels = names(thresh_values))

# You can then write out stats_df and stats_df_NotInflamed to a supplementary table.
# For example, you might combine them or write them separately:
stats_all <- rbind(stats_df, stats_df_NotInflamed)
write.csv(stats_all, "Supplementary_Stats_EMR.csv", row.names = FALSE)

# Create the heatmap using ggplot2
p <- ggplot(df_tidy, aes(x = Class, y = Threshold, fill = Proportion)) +
  geom_tile(color = "white") +
  # Using scale_fill_gradient2 to set a custom midpoint (0.75 here)
  scale_fill_gradient2(low = "white", high = "darkgreen", 
                       midpoint = 0.1, name = "Fraction of \nEMR+ cells") +
  theme_minimal() + 
  labs(x = NULL, y = "Thresholds", title = NULL, subtitle = NULL)+
  # Remove titles and axis labels for a cleaner look
  labs(x = NULL, y = NULL, title = NULL, subtitle = NULL) +
  theme(axis.ticks = element_blank(),
        axis.text = element_text(size = 12),
        panel.grid = element_blank())+
  theme(axis.text.x = element_text(angle = 45, hjust = 1))

# Save the plot to PDF
pdf('ggpubr_Inflamed_vs_Healthy_Uninflamed_5thQuantiles_EMR.pdf', width = 3.5, height = 10)
print(p)
dev.off()
